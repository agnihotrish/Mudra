                    android:textSize="25dp"
                    android:padding="3dip"
                    android:text="0" />

                <TextView
                    android:id="@+id/ml"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:padding="3dip"
                    android:text="0"
                    android:phoneNumber="false" />

            </TableRow>


            <TableRow
