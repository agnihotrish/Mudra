<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.agnihotrish.mudra.options">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   OPTIONS   "
        android:id="@+id/opt"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ToggleButton
        android:id="@+id/butmusic"

        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textOn="Music on"
        android:textOff="Music off"
        android:onClick="onToggleMusic"
        android:layout_marginTop="126dp"
        android:layout_below="@+id/opt"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ToggleButton
        android:id="@+id/butsfx"

        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textOn="SFX on"
        android:textOff="SFX off"
        android:onClick="onToggleSFX"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/butmusic"
        android:textAlignment="center"
        android:textSize="25dp" />


</RelativeLayout>
